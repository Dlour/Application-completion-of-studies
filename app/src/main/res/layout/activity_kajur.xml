<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal"
    tools:context=".KajurActivity">



    <include layout="@layout/toolbar"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Kepala Prodi"
        android:fontFamily="@font/poppins_bold"
        android:id="@+id/greetings"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>








        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toBottomOf="@id/greetings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dashboard"
            app:cardCornerRadius="10dp"
            android:background="@color/white"
            app:cardElevation="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Data Mahasiswa"
                android:fontFamily="@font/sora_semibold"
                android:textColor="@color/teal"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lihat Data"
                android:layout_marginTop="40dp"
                android:id="@+id/lihat_data"
                android:layout_gravity="center_horizontal"
                android:backgroundTint="@color/teal"
                android:fontFamily="@font/sorareguler"
                />







        </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dashboard"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dashboard2"
        app:cardCornerRadius="10dp"
        android:background="@color/white"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lihat Jurnal Mahasiswa"
            android:fontFamily="@font/sora_semibold"
            android:textColor="@color/teal"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="List Jurnal"
            android:layout_marginTop="40dp"
            android:id="@+id/list_jurnal"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="@color/teal"
            android:fontFamily="@font/sorareguler"
            />







    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>