<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UploadActivity">

    <FrameLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/toolbar"
        android:background="@color/teal"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="Upload Tugas Akhir"
            android:fontFamily="@font/sora_bold"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"/>

        <ImageView
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/baseline_arrow_back_ios_24"/>

    </FrameLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"

        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jurnal &amp; Skripsi"
            android:fontFamily="@font/sora_semibold"
            android:textColor="@color/teal"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/namaMhs1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="M.Daffa"
            android:background="@drawable/border_text"
            android:fontFamily="@font/sorareguler"
            android:layout_marginStart="20dp"/>

        <TextView
            android:id="@+id/nimMhs1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="220210501047"
            android:background="@drawable/border_text"

            android:fontFamily="@font/sorareguler"
            android:layout_marginStart="20dp"/>

        
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/file"
            style="@style/Widget.Material3.AutoCompleteTextView.FilledBox">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_text"
                android:hint="Judul"
                android:fontFamily="@font/soralight"
                android:textColorHint="#6C6C6C"
                android:id="@+id/filepdf"/>

        </com.google.android.material.textfield.TextInputLayout>



        <Button
            android:layout_marginTop="20dp"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Upload"
            android:id="@+id/uploadbtn"
            android:backgroundTint="@color/teal"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>